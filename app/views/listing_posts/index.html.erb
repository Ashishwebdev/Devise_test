<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listing_posts.each do |listing_post| %>
      <tr>
        <td><%= listing_post.title %></td>
        <td><%= listing_post.content %></td>
        <td><%= listing_post.user.id %></td>
        <td><%= link_to 'Show', listing_post %></td>
        <% if listing_post.user == current_user %>
        <td><%= link_to 'Edit', edit_listing_post_path(listing_post) %></td>
        <td><%= link_to 'Destroy', listing_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%  end  %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing post', new_listing_post_path %>
